<div class="container">
  <div class="row mt-5">
    <div class ="col-md-3">
       <table class="table mt-4">
        <thead>
          <tr>
            <th class="text-center">地域で探す</th>
          </tr>
        </thead>
        <tbody>
          <% @districts.each do |destrict| %>
          <tr>
            <td class="text-center"><%= link_to "#{destrict.name}",reviews_path %></td>
          </tr>
          <% end %>
        <tbody>
      </table>
    </div>
    <div class="col-md-9">
      <% @races.each do |race| %>
      <div class= "border rounded">
        <div class= "row">
          <div class="col-md-12 m-2">
          <p class="h3 text-center"><%= link_to race.name,review_path(race) %></p>
          <p class="text-center">レビュー：<%=race.reviews.count %>件</p>
          </div>
        </div>
        <div class= "row">
          <div class="col-md-4">
             <%= image_tag race.get_race_image(200,200),class: "mx-auto d-block"%>
          </div>
          <div class="col-md-4 m-2">
          </div>
        </div>
      </div>
      <% end %>
      <div class="text-center mt-5"> <%=link_to "レビューを書く",new_review_path, class: "btn btn-primary" %></div>
    </div>
  </div>
</div>