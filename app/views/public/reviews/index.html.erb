<div class="container">
  <div class="row mt-5">
    <div class ="col-md-3 mt-3">
      <%= render "districts",districts: @districts %>
    </div>
    <div class="col-md-9">
      <%if end_user_signed_in? || admin_signed_in? %>
        <div class="text-right mb-2"> <%= render "../views/layouts/search"%></div>
      <% end %>
      <p class="text-center marker-border-blue h3">大会レビュー 一覧</p>
      <% @races.each do |race| %>
        <!--大会情報公開ステータス-->
        <% if race.is_active == true %>
        <%= render "public/reviews/race_index", race: race  %>
        <% end %>
      <% end %>
      <p class="mt-3"><%= paginate @races %></p>
      <%if end_user_signed_in?%>
        <div class="text-center my-5"> <%=link_to "レビューを書く",new_review_path, class: "btn btn-primary" %></div>
      <% end %>
      <% unless (end_user_signed_in?) || (admin_signed_in?)%>
        <div class="text-right mt-5"> <%=link_to "これより先は、ユーザー登録をすることで閲覧できます。",new_end_user_registration_path, class: "btn btn-link" %></div>
      <% end %>
    </div>
  </div>
</div>