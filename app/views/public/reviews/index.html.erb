<div class="container">
  <div class="row mt-5">
    <div class ="col-md-3 mt-3">
      <%= render "districts",districts: @districts %>
    </div>
    <div class="col-md-9 mb-5">
      <%if end_user_signed_in? || admin_signed_in? %>
        <div class="text-right mb-2"> <%= render "../views/layouts/search"%></div>
      <% end %>
      <p class="text-center marker-border-blue h4">
        <% if params[:district_id]%>
          <span><%=@district.name%>の大会レビュー一覧</span>
        <%else%>
          <span>全国の大会レビュー一覧</span>
        <% end %>
      </p>
      <% @races.each do |race| %>
        <!--大会情報公開ステータス-->
        <% if race.is_active == true %>
        <%= render "public/reviews/race_index", race: race  %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>