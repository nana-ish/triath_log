<div class="container">
  <div class="row mt-5">
    <div class ="col-md-3">
      <%= render "districts",districts: @districts %>
    </div>
    <div class="col-md-9">
      <%if end_user_signed_in? || admin_signed_in? %>
        <div class="text-right mb-2"> <%= render "../views/layouts/search"%></div>
      <% end %>
      <p class="text-center marker-border-blue h3">大会レビュー 一覧</p>
      <% @races.each do |race| %>
        <%= render "public/reviews/race_index", race: race  %>
      <% end %>
      <p class="mt-3"><%= paginate @races %></p>
      <div class="text-center mt-5"> <%=link_to "レビューを書く",new_review_path, class: "btn btn-primary" %></div>
    </div>
  </div>
</div>